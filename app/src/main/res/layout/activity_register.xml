<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.Register"
    android:background="@color/background">


  <TextView
      android:id="@+id/tvTituloRegister"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Registrarse"
      android:textAlignment="center"
      android:textColor="@color/primary"
      android:textStyle="bold"
      android:textSize="35sp"

      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/clContainerLogin"
      />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/clContainerLogin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@drawable/rounded"
      android:padding="20dp"

      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvTituloRegister"
      app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:id="@+id/llContainerUsernameRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toTopOf="parent">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:src="@drawable/ic_baseline_person_24"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Username:"
          android:textColor="@color/black"
          />

      <EditText
          android:id="@+id/etUsernameRegister"
          android:layout_width="160dp"
          android:layout_height="wrap_content"
          android:inputType="text"/>

    </LinearLayout>

      <LinearLayout
          android:id="@+id/llContainerEmailRegister"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginVertical="10dp"
          app:layout_constraintTop_toBottomOf="@+id/llContainerUsernameRegister">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_email_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/etEmailRegister"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>

      </LinearLayout>

    <LinearLayout
        android:id="@+id/llContainerPasswordRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/llContainerEmailRegister">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:src="@drawable/ic_baseline_lock_24"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Clave:"
          android:textColor="@color/black"
          />

      <EditText
          android:id="@+id/etPasswordRegister"
          android:layout_width="160dp"
          android:layout_height="wrap_content"
          android:inputType="textPassword"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llContainerEstaturaRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/llContainerPasswordRegister">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:src="@drawable/ic_baseline_straighten_24"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Estatura:"
          android:textColor="@color/black"
          />

      <EditText

          android:id="@+id/etAlturaRegister"
          android:layout_width="160dp"
          android:layout_height="wrap_content"
          android:inputType="numberDecimal"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llContainerPesoRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/llContainerEstaturaRegister">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:src="@drawable/ic_baseline_balance_24"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Peso:"
          android:textColor="@color/black"
          />

      <EditText

          android:id="@+id/etPesoRegister"
          android:layout_width="160dp"
          android:layout_height="wrap_content"
          android:inputType="numberDecimal"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"
        android:text="Registrarse"
        android:padding="15dp"

        app:layout_constraintTop_toBottomOf="@+id/llContainerPesoRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />



  </androidx.constraintlayout.widget.ConstraintLayout>


  </androidx.constraintlayout.widget.ConstraintLayout>